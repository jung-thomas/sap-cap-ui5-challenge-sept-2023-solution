<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core" core:require="{handler: 'sapcapui5challenge/ext/actions/actions'}">
  <Dialog id="QuestionsCountDialog" title="{i18n>dialog}" contentWidth="300px">
    <Text id="questionsCountTitle" text="{title}" />
    <Input id="questionsCountInput" placeholder="{i18n>EnterCount}" type="Number" />

    <buttons>
      <Button id="btnClose" text="{i18n>dialogCloseButtonText}" type="Reject" press="handler.onCloseDialog"/>
      <Button id="btnSubmit" text="{i18n>dialogOnSubmitButtonText}" type="Accept" press="handler.onSubmitDialog"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>